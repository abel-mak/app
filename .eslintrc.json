{
    "env": {
		"node": true,
        "browser": true,
        "commonjs": true,
        "es2021": true,
		"mocha":true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-mixed-operators": 0,
        "no-debugger": 0,
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "semi": ["warn", "always"],
		"valid-typeof": "warn"
	}
}
